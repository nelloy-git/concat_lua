{
    "Lua.workspace.ignoreDir": [
        ".vscode",
        "dst",
        "builder",
        "src/compiletime",
        "src/Libs/Lib.lua"
    ],
    "Lua.workspace.library": {
        "./lib": true,
        //"./src": true
    },
    "Lua.workspace.preloadFileSize": 6000,
    "Lua.diagnostics.globals": [
        "Compiletime",
        "IsCompiletime",
        "GetSrcDir",
        "GetDstDir",
        "CompileFinal",
        "CompiletimeFinalToRuntime",
        "Lib"
    ],
    "files.associations": {
        "chrono": "cpp"
    },
    "Lua.awakened.cat": true,
    "maptz.regionfolder": {
        "[lua]": {
            "foldEnd": "--endregion",
            "foldEndRegex": "[\\s]*--endregion",
            "foldStart": "--region [NAME]",
            "foldStartRegex": "[\\s]*--region[\\s]*(.*)"
        }
    
    },
    "cmake.configureOnOpen": false,
}
