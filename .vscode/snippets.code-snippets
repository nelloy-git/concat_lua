            "-- Private",
            "--=========",
            "",
            "local private_data = {}",
            "---@param self ${1:className}",
            "---@return ${1:className}Private",
            "function private.new(self)",
            "    ---@class ${1:className}Private",
            "    local priv = {",
            "    }",
            "    private_data[self] = priv",
            "    return priv",
            "end",
            "",
            "---@param self ${1:className}",
            "---@return ${1:className}Private",
            "function private.get(self)",
            "    return private_data[self]",
            "end",
            "",
            "---@param self ${1:className}",
            "function private.free(self)",
            "    private_data[self] = nil",
            "end",
            "",
            "return ${1:className}"
        ]
