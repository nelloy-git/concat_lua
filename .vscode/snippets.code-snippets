            "",
            "---@param instance_data table | nil",
            "---@return ${1:className}",
            "function static.new(instance_data)",
            "    local instance = instance_data or Class.newInstanceData(${1:className})",
            "    local priv = private.new(instance)",
            "",
            "    return instance",
            "end",
            "",
            "--========",
            "-- Public",
            "--========",
            "",
