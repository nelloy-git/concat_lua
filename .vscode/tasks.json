    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Linux",
            "type": "shell",
            "command": " lua5.3 ./builder/builder.lua src dst map_data"
        },
        {
            "label": "Build Windows",
            "type": "shell",
            "command": "builder\\lua53.exe builder\\builder.lua src dst map_data"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "E:\\'Warcraft III 1.31'\\x86_64\\'Warcraft III.exe' -loadfile ${workspaceFolder}\\dst -windowmode windowed"
        },
        {
            "label": "Run Reforged",
            "type": "shell",
            "command": "E:\\'Warcraft III'\\x86_64\\'Warcraft III.exe' -launch -loadfile ${workspaceFolder}\\dst -windowmode windowed"
        }
    ]
}