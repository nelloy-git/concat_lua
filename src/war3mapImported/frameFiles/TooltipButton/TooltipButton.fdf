        BackdropBackgroundInsets 0.0022 0.0022 0.0022 0.0022,
        BackdropEdgeFile  "ToolTipBorder",
        BackdropBlendAll,
        SetPoint TOPLEFT, "ItemInfo", TOPLEFT, 0.004, -0.004,
        SetPoint BOTTOMRIGHT, "ItemInfo", TOPLEFT, 0.050, -0.050,
    }
 
